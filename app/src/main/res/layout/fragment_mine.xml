<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/layout_global_head"
        />

    <com.sovnem.yoyoweibo.widget.YOYORefreshLayout
        android:id="@+id/swiperefresh_mine_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sovnem.yoyoweibo.widget.LoadMoreListview
            android:id="@+id/listview_mine_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.sovnem.yoyoweibo.widget.LoadMoreListview>

    </com.sovnem.yoyoweibo.widget.YOYORefreshLayout>
</LinearLayout>